            <StackPanel.Resources>
                <Style TargetType="{x:Type Path}" >
                    <Setter Property="Width" Value=" 15"/>
                    <Setter Property="Stretch" Value="Uniform"/>
                    <Setter Property="Stroke">
                        <Setter.Value >
                            <SolidColorBrush Color="{StaticResource WindowTitleColor}"/>
                        </Setter.Value>
                    </Setter>
                </Style>
