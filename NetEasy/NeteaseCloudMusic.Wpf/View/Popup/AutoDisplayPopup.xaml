<ContentControl x:Name="contentControl" x:Class="NeteaseCloudMusic.Wpf.View.Popup.AutoDisplayPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeteaseCloudMusic.Wpf.View.Popup"
             mc:Ignorable="d" 
             Loaded="ContentControl_Loaded" >
  
  
    <Border Background="#FF353535" CornerRadius="8" MinWidth="120">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="6"  Foreground="White" Text="{Binding Content}"></TextBlock>
    </Border>
</ContentControl>
