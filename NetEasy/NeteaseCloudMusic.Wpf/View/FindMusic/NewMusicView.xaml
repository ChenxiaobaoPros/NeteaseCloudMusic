                                        Width="15" Height=" 10"   VerticalAlignment="Center"  HorizontalAlignment="Center" >
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="{StaticResource WindowTitleColor}"/>
                                    </Border.BorderBrush>
                                    <TextBlock Text="{Binding MusicQuality}"  FontSize=" 8">
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{StaticResource WindowTitleColor}"/>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </Border>-->

