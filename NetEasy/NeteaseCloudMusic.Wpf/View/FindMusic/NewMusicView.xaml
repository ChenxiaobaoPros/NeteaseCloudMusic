                            <TextBlock  Text="完成" Foreground="Blue" FontSize="{StaticResource WindowMainFontSize}" 
                                        VerticalAlignment="Center" FontFamily="{StaticResource WindowMainFont}" Margin="2,0"/>
                        </StackPanel>
                    </Grid>
                </ToggleButton>
            </StackPanel>
            <!--新歌速递部分-->
            <Grid Grid.Row=" 2" Margin=" 10" 
                  Visibility="{Binding ElementName=rdTopMusic,Path=IsChecked,Converter={x:Static converter:ValueConverterFactory.Boolean2VisibilityConverter}}">
                <Button Visibility="Collapsed" x:Name="btnArtistBinding" Command="{Binding ArtistCommand}"/>
                <Button Visibility="Collapsed" x:Name="btnAlbumBinding" Command="{Binding AlbumCommand}"/>
                <ListBox  ItemsSource="{Binding NewMusicList}"   
                     SelectionMode="{Binding SelectionMode}"
                      AlternationCount="2"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.CacheLength="1" VirtualizingPanel.CacheLengthUnit="Page"
                     >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <prism:InvokeCommandAction  Command="{Binding SelectedCommand}" TriggerParameterPath="Source.SelectedItems" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.Resources>
                        <Style TargetType="CheckBox" BasedOn="{StaticResource RedFillStyleCheckBoxStyle}">
                            <Setter Property="Foreground" >
                                <Setter.Value >
                                    <SolidColorBrush Color="{StaticResource WindowForeDarkColor}"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </ListBox.Resources>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource DefaultTwoColorListBoxItemStyle}">
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.Template>
                        <ControlTemplate TargetType="ListBox">
                            <Border >
                                <ScrollViewer >
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </ControlTemplate>
                    </ListBox.Template>
                    <ListBox.ItemTemplate>
                        <DataTemplate  >
                            <DockPanel Height=" 60"  >
                                <DockPanel    DockPanel.Dock ="Right" Width="400"  >
                                    <DockPanel.Resources>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource GrayTopTextBoxStyle }">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="Width" Value="150"/>
                                        </Style>
                                    </DockPanel.Resources>

                                    <TextBlock  Width=" 60" DockPanel.Dock="Right">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{x:Static converter:MultiValueConverterFactory.TimeSpan2TextConverter}">
                                                <Binding Path="Duration"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <Button Content="{Binding AlbumName}" Style="{StaticResource EmptyButtonWithFocusStyle}" 
                                        Margin="10,0,30,0"  
                                        Command="{Binding ElementName=btnAlbumBinding,Path=Command}"
                                        CommandParameter="{Binding Id}"
                                        DockPanel.Dock="Right"/>
                                    <ItemsControl ItemsSource="{Binding Artists}"  >
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource EmptyButtonWithFocusStyle}" 
                                                    Command="{Binding ElementName=btnArtistBinding,Path=Command}"
                                                    CommandParameter="{Binding }"
                                                    Content="{Binding Name}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
