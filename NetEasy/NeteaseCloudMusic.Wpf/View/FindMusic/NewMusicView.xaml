<ContentControl xmlns:controls="clr-namespace:NeteaseCloudMusic.Controls;assembly=NeteaseCloudMusic.Controls" 
                x:Class="NeteaseCloudMusic.Wpf.View.NewMusicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:converter="clr-namespace:NeteaseCloudMusic.Wpf.BindingConverter"
                xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
xmlns:prism="http://www.codeplex.com/prism"
             mc:Ignorable="d" 
                xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                xmlns:model="clr-namespace:NeteaseCloudMusic.Wpf.Model"
                d:DesignHeight="300" d:DesignWidth="600">


    <Grid>
        <Grid>
            <Grid.Resources>
                <Style TargetType="Rectangle"  BasedOn="{StaticResource VerticalDecorationRectangleStyle}">
                    <Setter Property="Margin" Value="2,2"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition  />
            </Grid.RowDefinitions>
            <DockPanel Height=" 20" Margin="20,15">
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="RadioButton">
                            <Setter Property="Command" Value="{Binding NewMusicOrDiskCommand}"/>
                            <Setter Property="FontFamily" Value="{StaticResource WindowMainFont }"/>
                            <Setter Property="FontSize" Value="{StaticResource WindowMainFontSize}"/>
                            <Setter Property="Foreground" >
                                <Setter.Value >
                                    <SolidColorBrush Color="{StaticResource WindowForeDarkColor}"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template" >
                                <Setter.Value >
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border CornerRadius="1"
                                                x:Name="Back_Border" 
                                                BorderThickness=" 1"   
                                                Background="Transparent" 
                                                RenderTransformOrigin="0.5,0.5" 
                                                SnapsToDevicePixels="True">
                                            <Border.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                </TransformGroup>
                                            </Border.RenderTransform>
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="{StaticResource WindowForeGrayColor}"/>
                                            </Border.BorderBrush>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CheckStates">
                                                    <VisualState x:Name="Unchecked"/>
                                                    <VisualState x:Name="Checked">
                                                        <Storyboard>
                                                            <ColorAnimation Duration="0:0:0"  
                                                                            To="{StaticResource WindowForeGrayColor}" 
                                                                            Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" 
                                                                            Storyboard.TargetName="Back_Border"/>
                                                            <DoubleAnimation To="0.95" 
                                                                             Duration="0" 
                                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" 
                                                                             Storyboard.TargetName="Back_Border"/>
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <ContentPresenter Margin="2,1,2,2"  />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>
                    <RadioButton Content="新歌速递"  IsChecked="True"  
                                 x:Name="rdTopMusic" 
                               
                                 CommandParameter="0"/>
                    <RadioButton Content="新碟上架"   CommandParameter="1" />
                </StackPanel>
                <StackPanel  HorizontalAlignment="Right" Orientation="Horizontal" x:Name="languageTypes" >
                    <StackPanel.Resources>
                        <Style TargetType="RadioButton" BasedOn="{StaticResource EmptyTextOnlyRadioButtonStyle}">
                            <Setter Property="Command" Value="{Binding LanguageCommand}"/>
                            <Setter Property="Foreground" >
                                <Setter.Value >
                                    <SolidColorBrush Color="{StaticResource WindowForeGrayColor}"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>

                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="IsChecked" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Foreground"  >
                                        <Setter.Value>
                                            <SolidColorBrush Color="{StaticResource WindowForeDarkColor}"/>
                                        </Setter.Value>
                                    </Setter>
                                </MultiTrigger>
                                <Trigger Property="IsChecked" Value="true">
                                    <Setter Property="Foreground"  >
                                        <Setter.Value>
                                            <SolidColorBrush Color="{StaticResource WindowForeDarkColor}"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>

                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>
                    <RadioButton Content="华语" IsChecked="True"   CommandParameter="1"/>
                    <Rectangle/>
                    <RadioButton Content="欧美" CommandParameter="2"/>
                    <Rectangle/>
                    <RadioButton Content="日本" CommandParameter="3"/>
                    <Rectangle/>
                    <RadioButton Content="韩国" CommandParameter="4"/>
                </StackPanel>
            </DockPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin=" 2" x:Name="playControlPart">
                <Button Style="{StaticResource EmptyButtonStyle}" Command="{Binding PlayAllOrSelectedCommand}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=" 20"/>
                            <ColumnDefinition  />
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Ellipse   Height=" 20" >
                                <Ellipse.Stroke >
                                    <SolidColorBrush Color="{StaticResource WindowTitleColor}"/>
                                </Ellipse.Stroke>
                            </Ellipse>
                            <ed:RegularPolygon PointCount=" 3" Width=" 10" Height=" 8" RenderTransformOrigin="0.5,0.5" Margin="4,0,0,0">
                                <ed:RegularPolygon.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ed:RegularPolygon.RenderTransform>
                                <ed:RegularPolygon.Fill>
                                    <SolidColorBrush Color="{StaticResource WindowTitleColor}"/>
                                </ed:RegularPolygon.Fill>
                            </ed:RegularPolygon>
                        </Grid>
                        <TextBlock Text="播放全部" Grid.Column="1" Margin=" 2,0,0,0"
                                   VerticalAlignment="Center" 
                                   Style="{StaticResource DarkBottomTextBoxStyle}"
                                   />
                        <!--<TextBlock Text="播放选中" Grid.Column="1" Margin=" 2,0,0,0"
                                   VerticalAlignment="Center" 
                                   Style="{StaticResource DarkBottomTextBoxStyle}"
                                   Visibility="{Binding IsSelectModel,Converter={StaticResource B2V}    }"/>-->
                    </Grid>
                </Button>
                <Rectangle Margin="2,4"/>
                <ToggleButton  Name="SelectToggleButton" IsThreeState="False" 
                               IsChecked="{Binding IsSelectModel}"  >
                    <ToggleButton.Template  >
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid Background="Transparent" >
                                <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            </Grid>
                        </ControlTemplate>
                    </ToggleButton.Template>
                    <Grid>
                        <StackPanel Orientation="Horizontal" 
                                    Visibility="{Binding IsChecked,RelativeSource={RelativeSource AncestorType=ToggleButton,AncestorLevel=1},Converter={x:Static converter:ValueConverterFactory.Boolean2VisibilityConverter},ConverterParameter=1}">
                            <Path Width=" 18" Stretch="Uniform" Data="F1M14290,7397L14881,7397 M14290,7088L14881,7088 M13956,7705L14881,7705 M13956,7034L14032,7140 M14032,7140L14227,6965 M13956,7343L14032,7448 M14032,7448L14227,7274" StrokeThickness="1">
                                <Path.Stroke>
                                    <SolidColorBrush Color="{StaticResource WindowForeDarkColor}"/>
                                </Path.Stroke>
                            </Path>
                            <TextBlock Margin="2,0,0,0" Style="{StaticResource DarkBottomTextBoxStyle}" Text="选择" VerticalAlignment="Center" />

                        </StackPanel>
                        <StackPanel  Visibility="{Binding IsChecked,RelativeSource={RelativeSource AncestorType=ToggleButton,AncestorLevel=1},Converter={x:Static converter:ValueConverterFactory.Boolean2VisibilityConverter}}" Orientation="Horizontal">
